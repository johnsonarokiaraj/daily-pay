<div style="max-width: 900px; margin: 32px auto; padding: 32px; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">
  <h1 style="font-size: 2rem; margin-bottom: 0.5em; color: #1677ff; font-weight: 700; letter-spacing: 1px;">
    <%= @board.name %> <span style="font-size: 1.2rem; color: #888; font-weight: 400;">Tag Insights Board</span>
  </h1>
  <div style="margin-bottom: 1em;">
    <span style="font-size: 1.1rem; font-weight: 500;">Main Tag:</span>
    <span style="background: #e6f4ff; color: #1677ff; border-radius: 4px; padding: 2px 10px; margin-left: 8px; font-weight: 600;"> <%= @board.main_tag %> </span>
  </div>
  <div style="margin-bottom: 2em;">
    <span style="font-size: 1.1rem; font-weight: 500;">Sub Tags:</span>
    <% @board.sub_tags.each do |tag| %>
      <span style="background: #f0f5ff; color: #2b3a55; border-radius: 4px; padding: 2px 10px; margin-left: 8px; font-weight: 500;"> <%= tag %> </span>
    <% end %>
  </div>

  <div style="margin-bottom: 2em;">
    <h2 style="font-size: 1.2rem; color: #444; margin-bottom: 0.5em;">Summary</h2>
    <% main = @flattened.find { |row| row[:type] == :main_tag } %>
    <div style="background: #f6ffed; border: 1px solid #b7eb8f; border-radius: 6px; padding: 12px 18px; margin-bottom: 1em;">
      <strong style="color: #389e0d; font-size: 1.1rem;"> <%= main[:tag] %> </strong>
      <span style="margin-left: 16px; color: #555;">Sum: <b><%= main[:sum] %></b></span>
      <span style="margin-left: 16px; color: #555;">Transactions: <b><%= main[:count] %></b></span>
    </div>
    <% @flattened.each_with_index do |row, idx| %>
      <% if row[:type] == :sub_tag %>
        <div style="background: #f0f5ff; border: 1px solid #adc6ff; border-radius: 6px; padding: 10px 16px; margin-bottom: 0.5em;">
          <strong style="color: #2b3a55;"> <%= row[:tag] %> </strong>
          <span style="margin-left: 12px; color: #555;">Sum: <b><%= row[:sum] %></b></span>
          <span style="margin-left: 12px; color: #555;">Transactions: <b><%= row[:count] %></b></span>
        </div>
        <table style="width: 96%; margin: 0 2% 1.5em 2%; border-collapse: collapse; background: #fff; box-shadow: 0 1px 4px rgba(0,0,0,0.03); border-radius: 6px; overflow: hidden;">
          <thead>
            <tr style="background: #f0f5ff;">
              <th style="padding: 8px 10px; text-align: left; color: #2b3a55; font-weight: 600;">Date</th>
              <th style="padding: 8px 10px; text-align: left; color: #2b3a55; font-weight: 600;">Name</th>
              <th style="padding: 8px 10px; text-align: left; color: #2b3a55; font-weight: 600;">Amount</th>
              <th style="padding: 8px 10px; text-align: left; color: #2b3a55; font-weight: 600;">Tags</th>
            </tr>
          </thead>
          <tbody>
            <% i = idx + 1
               while i < @flattened.size && @flattened[i][:type] == :transaction do %>
              <tr style="border-bottom: 1px solid #f0f0f0;">
                <td style="padding: 8px 10px; color: #888; font-size: 0.97em;">
                  <%= @flattened[i][:date].strftime('%Y-%m-%d') %>
                </td>
                <td style="padding: 8px 10px; font-weight: 500; color: #222;">
                  <%= @flattened[i][:name] %>
                </td>
                <td style="padding: 8px 10px; color: #1677ff; font-weight: 600;">
                  ₹<%= @flattened[i][:amount] %>
                </td>
                <td style="padding: 8px 10px; color: #aaa;">
                  <%= @flattened[i][:tags].join(', ') %>
                </td>
              </tr>
              <% i += 1 %>
            <% end %>
          </tbody>
        </table>
      <% end %>
    <% end %>
  </div>

  <div style="margin-top: 2em; display: flex; gap: 16px;">
    <%= link_to '← Back to Boards', tag_insights_boards_path, style: 'color: #1677ff; font-weight: 500; text-decoration: none;' %>
    <%= link_to 'Edit', edit_tag_insights_board_path(@board), style: 'color: #fff; background: #1677ff; padding: 6px 18px; border-radius: 4px; font-weight: 500; text-decoration: none;' %>
  </div>
</div>
