<div style="max-width: 600px; margin: 32px auto; padding: 32px; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">
  <h1 style="font-size: 2rem; margin-bottom: 0.5em; color: #1677ff; font-weight: 700; letter-spacing: 1px;">
    Edit Tag Insights Board
  </h1>
  <%= form_with(url: tag_insights_board_path(@board), model: @board, local: true, data: { turbo: false }) do |f| %>
    <div style="margin-bottom: 1.5em;">
      <%= f.label :name, 'Board Name', style: 'font-weight: 500;' %><br>
      <%= f.text_field :name, class: 'form-control', style: 'width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>
    <div style="margin-bottom: 1.5em;">
      <%= f.label :main_tag, 'Main Tag', style: 'font-weight: 500;' %><br>
      <%= f.text_field :main_tag, class: 'form-control', style: 'width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>
    <div style="margin-bottom: 2em;">
      <%= f.label :sub_tags, 'Sub Tags (comma separated)', style: 'font-weight: 500;' %><br>
      <%= f.text_field :sub_tags, value: @board.sub_tags.join(', '), class: 'form-control', style: 'width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>
    <div>
      <%= f.submit 'Save Changes', class: 'btn btn-primary', style: 'background: #1677ff; color: #fff; border: none; padding: 10px 24px; border-radius: 4px; font-weight: 600;' %>
      <%= link_to 'Cancel', tag_insights_board_path(@board), style: 'margin-left: 16px; color: #888; text-decoration: none;' %>
    </div>
  <% end %>
</div>
