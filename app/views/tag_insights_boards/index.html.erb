<div style="max-width: 900px; margin: 32px auto; padding: 32px; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5em;">
    <h1 style="font-size: 2rem; color: #1677ff; font-weight: 700; letter-spacing: 1px; margin: 0;">Tag Insights Boards</h1>
    <%= link_to 'New Board', new_tag_insights_board_path, style: 'color: #fff; background: #1677ff; padding: 8px 20px; border-radius: 4px; font-weight: 500; text-decoration: none; font-size: 1rem;' %>
  </div>
  <table style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr style="background: #f0f5ff;">
        <th style="padding: 10px 8px; text-align: left; color: #2b3a55; font-weight: 600;">Name</th>
        <th style="padding: 10px 8px; text-align: left; color: #2b3a55; font-weight: 600;">Main Tag</th>
        <th style="padding: 10px 8px; text-align: left; color: #2b3a55; font-weight: 600;">Sub Tags</th>
        <th style="padding: 10px 8px; text-align: left; color: #2b3a55; font-weight: 600;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
        <tr style="border-bottom: 1px solid #f0f0f0;">
          <td style="padding: 10px 8px; font-weight: 500; color: #1677ff;">
            <%= link_to board.name, tag_insights_board_path(board), style: 'text-decoration: none; color: #1677ff;' %>
          </td>
          <td style="padding: 10px 8px;">
            <span style="background: #e6f4ff; color: #1677ff; border-radius: 4px; padding: 2px 10px; font-weight: 600;"> <%= board.main_tag %> </span>
          </td>
          <td style="padding: 10px 8px;">
            <% Array(board.sub_tags).each do |tag| %>
              <span style="background: #f0f5ff; color: #2b3a55; border-radius: 4px; padding: 2px 10px; margin-right: 6px; font-weight: 500;"> <%= tag %> </span>
            <% end %>
          </td>
          <td style="padding: 10px 8px;">
            <%= link_to 'View', tag_insights_board_path(board), style: 'color: #1677ff; font-weight: 500; margin-right: 10px; text-decoration: none;' %>
            <%= link_to 'Edit', edit_tag_insights_board_path(board), style: 'color: #fff; background: #1677ff; padding: 4px 14px; border-radius: 4px; font-weight: 500; text-decoration: none;' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

