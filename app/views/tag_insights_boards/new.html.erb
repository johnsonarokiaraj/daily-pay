<h1>New Tag Insights Board</h1>

<%= form_with model: @board, url: tag_insights_boards_path, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :main_tag %><br>
    <%= f.text_field :main_tag %>
  </div>
  <div>
    <%= f.label :sub_tags, 'Sub Tags (comma separated)' %><br>
    <%= f.text_field :sub_tags, value: @board.sub_tags&.join(', ') %>
  </div>
  <div>
    <%= f.submit 'Create Board' %>
  </div>
<% end %>

<%= link_to 'Back', tag_insights_boards_path %>

