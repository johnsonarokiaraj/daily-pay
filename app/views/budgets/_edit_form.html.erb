<%= form_with model: budget, url: budget_path(budget), method: :patch, remote: true, html: { id: "edit-budget-form", class: "tag-form", data: { id: budget.id } } do |f| %>
  <div class="container-fluid">
    <div class="col-md-12">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="container-fluid">
    <div class="col-md-6">
      <label>Date</label>
      <%= f.text_field :transaction_date, class: "form-control datepicker edit-date", value: format_date(transaction.transaction_date) %>
      <a href="#" class="date-link edit-set-today">today</a>
      <a href="#" class="date-link edit-set-yesterday">yesterday</a>
    </div>

    <div class="col-md-6">
      <label>Amount</label>
      <%= f.text_field :amount, class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="container-fluid">
    <div class="col-md-12">
      <label>Tags</label>
      <%= f.text_field :tag_list, class: "form-control tag", value: budget.tag_list.join(","), data: { tags: @tag_names.to_json } %>
    </div>
  </div>

  <div class="container-fluid"><div class="col-md-12"><button type="submit" class="btn btn-success table-btn">Save</button></div></div>
<% end %>