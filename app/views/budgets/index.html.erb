<table class="table">
  <tr>
    <td class="col-md-2"><h3 class="title"><span class="fa fa-balance-scale"></span> Budget</h3></td>
    <td class="col-md-10">
      <div class="msg">
        <% if flash[:alert].present? %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
      </div>
    </td>
  </tr>
</table>

<table class="table table-striped table-bordered">
  <%= form_with model: @budgets, url: budgets_path, remote: true, html: { id: "budget-form" } do |f| %>
  <tr>
    <td class="col-md-4"><label>Tag</label><%= f.text_field :name, placeholder: "Enter the tag", value: "", class: "form-control" %></td>
    <td class="col-md-2"><label>amount</label><%= f.text_field :limit, placeholder: "Enter the limit", value: "", class: "form-control" %></td>
    <td class="col-md-2"><label>Start date</label><%= f.text_field :start_date, value: "", class: "form-control datepicker"%></td>
    <td class="col-md-2"><label>End date</label><%= f.text_field :end_date, value: "", class: "form-control datepicker"%></td>
    <td class="col-md-1"><button type="submit" class="btn btn-primary table-btn">Add</button></td>
  </tr>
  <% end %>
</table>

<table class="table table-striped table-bordered">
  <% if @budgets.present? %>
    <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-2">Limit</th>
      <th class="col-md-3">Member name</th>
      <th class="col-md-3">Spent category</th>
      <th class="col-md-3">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.name %></td>
        <td><%= budget.limit %></td>
        <td><%= budget.member.name %></td>
        <td><%= budget.spent_category.name %></td>
        <td>
          <a href="#" class="fa fa-pencil-square-o edit" title="disabled"></a>
          <a href="#" class="fa fa-trash-o delete" title="disabled"></a>
        </td>
      </tr>
    <% end %>
    </tbody>
  <% else %>
    <tr>
      <td colspan="3" class="text-center alert alert-info">No  budget are available to display</td>
    </tr>
  <% end %>
</table>

