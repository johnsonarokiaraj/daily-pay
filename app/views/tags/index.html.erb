<table class="table">
  <tr>
    <td class="col-md-2"><h3 class="title"><span class="fa fa-tags"></span> Tags</h3></td>
    <td class="col-md-10">
      <div class="msg">
        <% if flash[:alert].present? %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
      </div>
    </td>
  </tr>
</table>

<table class="table table-striped table-bordered">
  <% if @tags.present? %>
    <thead>
    <tr>
      <th class="col-md-10">Tag Name</th>
      <th class="col-md-2">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <%= link_to '', tag_path(tag.name), method: :delete, class: 'fa fa-trash-o text-danger', data: { confirm: 'Really delete this tag?' }, title: 'Delete' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  <% else %>
    <tr>
      <td colspan="3" class="text-center alert alert-info">No tags are available to display</td>
    </tr>
  <% end %>
</table>


